<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent" android:background="@drawable/bckgrnd"
  android:layout_height="match_parent" android:orientation="vertical">
    <TableRow android:id="@+id/tableRow1" 
    android:layout_width="match_parent" 
    android:layout_height="wrap_content">
        <TableRow android:layout_width="match_parent" 
        android:id="@+id/tableRow2" 
        android:layout_height="wrap_content">
            <ImageView android:layout_width="320dp" 
            android:src="@drawable/header" 
            android:id="@+id/imageView1" 
            android:layout_height="80dp"></ImageView>
            
        </TableRow>
        
    </TableRow>
    <TableRow android:layout_height="wrap_content" 
    android:id="@+id/tableRow3" 
    android:layout_width="match_parent">
        <TextView android:text="" 
        android:id="@+id/textView1" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content">
        </TextView>
    </TableRow>
    <TableRow android:layout_height="wrap_content" 
    android:id="@+id/tableRow3" 
    android:layout_width="match_parent">
        <TextView android:text="Welcome To Patient" 
        android:id="@+id/textView1"  
        android:textSize="16sp"
        android:layout_width="wrap_content" 
        android:textColor="@color/black" 
        android:typeface="serif"
        android:layout_height="wrap_content" 
        android:textStyle="bold"></TextView>
    </TableRow>
    <TableRow android:layout_height="8dp" 
    android:id="@+id/tableRow3" 
    android:background="@color/white"
     android:layout_width="match_parent">
        <TextView android:text="" 
        android:id="@+id/textView1" 
        android:layout_width="wrap_content" 
        android:layout_height="wrap_content"></TextView>
    </TableRow>
    <TableRow android:layout_height="wrap_content" 
    android:id="@+id/tableRow3" 
    android:layout_width="match_parent">
        <TextView android:text="" 
        android:id="@+id/textView1" 
        android:layout_width="180dp" 
        android:layout_height="40dp"></TextView>
    </TableRow>
    <TableRow android:layout_height="wrap_content" 
    android:id="@+id/tableRow4" 
    android:layout_width="match_parent">
        <Button android:text="MyProfile" 
        android:background="@drawable/bckgrnd"
        android:id="@+id/myProfileB" 
        android:layout_width="180dp" 
        android:layout_height="40dp">
        </Button>
    </TableRow>
    <TableRow android:layout_height="wrap_content" 
    android:id="@+id/tableRow3" 
    android:layout_width="match_parent">
       
        <Button android:text="AddVitalSigns" 
        android:background="@drawable/bckgrnd"
         android:id="@+id/button3" 
         android:layout_width="180dp" 
         android:layout_height="40dp"></Button>
    </TableRow>
    <TableRow android:layout_height="wrap_content" 
    android:id="@+id/tableRow3" 
    android:layout_width="match_parent">
        <Button android:text="UpdateVitalSigns" 
        android:id="@+id/button2" 
        android:background="@drawable/bckgrnd"
        android:layout_width="180dp" 
        android:layout_height="40dp"></Button>
        
    </TableRow>
    <TableRow android:layout_height="wrap_content" 
    android:id="@+id/tableRow5" 
    android:layout_width="match_parent">
        <Button android:text="Logout" 
        android:background="@drawable/bckgrnd"
         android:id="@+id/button4" 
         android:layout_width="180dp" 
         android:layout_height="40dp"></Button>
    </TableRow>
</LinearLayout>
